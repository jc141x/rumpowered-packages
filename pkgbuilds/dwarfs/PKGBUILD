pkgname=dwarfs
pkgver=0.9.2
pkgrel=1
pkgdesc="A fast high compression read-only file system"
url='https://github.com/mhx/dwarfs'
arch=('x86_64' 'aarch64')
license=('GPL3')
depends=(
  'acl' 'libarchive' 'boost-libs'
  'brotli' 'bzip2' 'openssl'
  'glibc' 'double-conversion' 'expat'
  'flac' 'fmt' 'fuse3'
  'gcc-libs' 'gflags' 'google-glog'
  'jemalloc' 'lz4' 'xz'
  'glibc' 'libogg' 'glibc'
  'gcc-libs' 'libunwind' 'xxhash'
  'zlib' 'zstd'
)
makedepends=(
  'git' 'cmake' 'ruby-ronn'
  'boost' 'libevent' 'libdwarf'
  'utf8cpp' 'chrono-date' 'range-v3'
)
source=("$pkgname-$pkgver.tar.xz::https://github.com/mhx/dwarfs/releases/download/v$pkgver/dwarfs-$pkgver.tar.xz")
cksums=('2785695551')
sha256sums=('f5a7c683e113b04eb81afa0d4e7eeec948ac280c30fb68a9093c6c1008719bc5')
b2sums=('00a13413d8a4751cccfe3f0089f428a0cbefeb08f89fde663e21bfb7163bd2cddbe4fa528b0afe9f93bd5e170ba56572d2745cc39ea8c7e3eeb8eacd0e0ec265')

prepare() {
  cd "$pkgname-$pkgver"
}

build() {
  cmake -B build -S "$pkgname-$pkgver" \
    -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=None \
    -D WITH_MAN_OPTION=OFF \
    -D PREFER_SYSTEM_ZSTD=ON \
    -D PREFER_SYSTEM_XXHASH=ON \
    -D PREFER_SYSTEM_LIBFMT=ON \
    -D PREFER_SYSTEM_GTEST=ON \
    -D CMAKE_CXX_FLAGS=-w

  cmake --build build -j$(nproc)
}

check() {
  make test
}

package() {
  cmake --install build --prefix "$pkgdir/usr"

  mv "$pkgdir/usr/sbin"/* "$pkgdir/usr/bin"
  rm -rf "$pkgdir/usr/sbin"

  install -Dm0644 "$pkgname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
